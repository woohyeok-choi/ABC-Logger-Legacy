<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="headerText" format="string"/>
    <attr name="descriptionText" format="string"/>
    <attr name="dividerPosition" format="enum">
        <enum name="none" value="-1"/>
        <enum name="top" value="0"/>
        <enum name="bottom" value="1"/>
    </attr>
    <attr name="showMore" format="boolean"/>

    <declare-styleable name="SectionItemView">
        <attr name="headerText"/>
        <attr name="showBottomSpace" format="boolean"/>
        <attr name="showMore"/>
    </declare-styleable>

    <declare-styleable name="DefaultItemView">
        <attr name="headerText"/>
        <attr name="descriptionText"/>
        <attr name="dividerPosition"/>
    </declare-styleable>

    <declare-styleable name="ProvidedDataItemView">
        <attr name="headerText"/>
        <attr name="descriptionText"/>
        <attr name="dividerPosition"/>
        <attr name="showMore"/>
    </declare-styleable>

    <declare-styleable name="ExperimentItemView">
        <attr name="title" format="string"/>
    </declare-styleable>
</resources>